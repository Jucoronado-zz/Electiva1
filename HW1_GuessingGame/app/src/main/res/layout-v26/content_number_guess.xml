<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_number_guess"
        tools:context=".NumberGuessActivity" android:orientation="vertical">

    <TextView
            android:text="@string/number_guess_game"
            android:layout_width="304dp"
            android:layout_height="wrap_content" android:id="@+id/Text1"
            android:textSize="30sp"
            android:layout_gravity="center"
            android:textColor="@color/colorAccent"/>
    <TextView
            android:text="@string/the_number_i_m_thinking_of_from_1_1000"
            android:layout_width="wrap_content"
            android:layout_height="59dp"
            android:layout_gravity="center"
            android:id="@+id/Text2" android:gravity="center" android:textSize="18sp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="137dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/Num1" android:autofillHints=""
            android:layout_gravity="center" android:textColor="@color/colorAccent"
            android:fontFamily="sans-serif-condensed" android:textSize="24sp"
            tools:text="#"/>
    <Button
            android:text="@string/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button1" tools:text="Juegue de Nuevo"
            android:layout_gravity="center"
            android:layout_marginVertical="10dp"/>
    <Button
            android:text="@string/reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button2"
            android:layout_gravity="center"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="50dp">
        <TextView
                android:text="@string/numero_de_intentos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"    android:id="@+id/Text4"
                android:layout_weight="4"
                android:gravity="center"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/Num2" android:layout_weight="1" android:autofillHints=""/>
    </LinearLayout>
</LinearLayout>